{% extends 'base.html.twig' %}

{% block title %}Experiment index{% endblock %}

{% block content %}
    <h1>Experiment index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Title</th>
                <th>Sensors</th>
                <th>Measurements</th>
                <th>Created at</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for experiment in experiments %}
            <tr>
                <td>{{ experiment.title }}</td>
                <td>{{ experiment.sensors|length }}</td>
                <td>{{ experiment.measurements|length }}</td>
                <td>{{ experiment.createdAt ? experiment.createdAt|date }}</td>
                <td>
                    <a href="{{ path('experiment_show', {'id': experiment.id}) }}">show</a>
                    <a href="{{ path('experiment_edit', {'id': experiment.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('experiment_new') }}">Create new</a>
{% endblock %}
