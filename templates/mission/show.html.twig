{% extends 'base.html.twig' %}

{% block title %}{{ 'Data mission: %title%'|trans({'%title%': mission.title}) }}{% endblock %}

{% block content %}
    <div class="container-fluid bg-white">
        <article class="mission py-3">

            {% include '_nav_close.html.twig' with {'nav_path': path('mission_index')} %}

            <h1>{{ mission.title }}</h1>
            <p class='text-primary-faded'>
                {{ mission.theme.title }}<br/>
                <i class='fas fa-map-marker-alt mr-1'></i>{{ mission.location }}
            </p>
            <p>{{ mission.description }}</p>

            <div id="app" data-options="{{ app_options|default(null)|json_encode }}"></div>

            {% if export_formats|default(false) %}
                <article id="export" class="mission-export mb-3">
                    {% include "_article_header.html.twig" with {'title': 'Export', 'add_button': false, 'edit_button': false} %}
                    <div class="row">
                        {# @TODO: Design #}
                        <div class="col-auto">
                            <div class="dropdown">
                                <button class="btn btn-success dropdown-toggle" type="button" id="export-mission-log-button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    {{ 'Export mission log'|trans }}
                                </button>
                                <div class="dropdown-menu" aria-labelledby="export-mission-log-button">
                                    {% for format in export_formats %}
                                        <a href="{{ path('mission_log', {id: mission.id, _format: format}) }}" class="dropdown-item">{{ format }}</a>
                                    {% endfor %}
                                </div>
                            </div>
                        </div>

                        <div class="col-auto">
                            <div class="dropdown">
                                <button class="btn btn-success dropdown-toggle" type="button" id="export-mission-log-button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    {{ 'Export measurements'|trans }}
                                </button>
                                <div class="dropdown-menu" aria-labelledby="export-mission-log-button">
                                    {% for format in export_formats %}
                                        <a href="{{ path('mission_measurements', {id: mission.id, _format: format}) }}" class="dropdown-item">{{ format }}</a>
                                    {% endfor %}
                                </div>
                            </div>
                        </div>

                        <div class="col-auto">
                            <div class="dropdown">
                                <button class="btn btn-success dropdown-toggle" type="button" id="export-mission-log-button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    {{ 'Export chart'|trans }}
                                </button>
                                <div class="dropdown-menu" aria-labelledby="export-mission-log-button">
                                    {% for format in ['png', 'jpg', 'pdf'] %}
                                        <button class="dropdown-item" data-export="chart" data-type="image" data-format="{{ format }}" data-options="{{ {filename: export_name}|json_encode }}">{{ format }}</button>
                                    {% endfor %}
                                </div>
                            </div>
                        </div>
                    </div>
                </article>
            {% endif %}

            <article class="mission-sources">
                <div class="row my-3">
                    <div class="col-auto">
                        <h2>{{ 'Sensors'|trans }}</h2>
                    </div>
                    <div class="col">
                        <a href="{{ path('mission_edit', {id: mission.id}) }}" class="btn btn-primary btn-sm">{{ 'Edit'|trans }}</a>
                    </div>
                </div>

                {% for missionSensor in mission.missionSensors %}

                    <div class="row mb-3">
                        <div class="col">
                            <div class="row">
                                {% if missionSensor.name %}
                                    <div class="col">
                                        <span>{{ missionSensor.name }}</span>
                                    </div>
                                {% endif %}
                                <div class="col bg-light text-right">
                                    <span>{{ missionSensor.sensor.type }}</span>
                                </div>
                                <div class="col-auto">
                                    <span data-toggle="popover" title="{{ missionSensor.sensor.type }}" data-content="<p>{{ missionSensor.sensor.type }}</p><a href='#' class='btn btn-primary btn-sm btn-block'>LÃ¦s mere</a>">
                                        <i class="fas fa-info-circle text-primary-100"></i>
                                    </span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col">
                                    <p>{{ missionSensor.sensor.id }}</p>
                                </div>
                            </div>
                        </div>
                    </div>
                {% else %}
                    {# @TODO: Design #}
                    <div class="alert alert-info">
                        {{ 'No sensors added yet'|trans }}
                        <a href="{{ path('mission_edit', {id: mission.id}) }}" class="btn btn-link">{{ 'Add a sensor'|trans }}</a></div>
                {% endfor %}
            </article>

            {% if mission.finishedAt %}
                {# @TODO: Design #}
                <div>
                    {{ 'Mission finished at %finished_at%'|trans({'%finished_at%': mission.finishedAt|date}) }}
                </div>
            {% elseif finish_mission_form is defined %}
                <article class="mission-finish mb-3">
                    {% include "_article_header.html.twig" with {'title': 'End mission', 'add_button': false, 'edit_button': false} %}
                    {{ form_start(finish_mission_form) }}
                        <div class="row">
                            <div class="col-auto">
                                <button type="submit" class="btn btn-danger">{{ 'Finish mission'|trans }}</button>
                            </div>
                        </div>
                    {{ form_end(finish_mission_form) }}
                </article>
            {% endif %}
        </section>
    </div>
{% endblock %}

{% block stylesheets %}
    {{ encore_entry_link_tags('mission') }}
{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('mission/show') }}
{% endblock %}
