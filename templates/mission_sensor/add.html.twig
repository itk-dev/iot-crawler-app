{% extends 'base.html.twig' %}

{% block title %}{{ 'Add mission sensor'|trans }}{% endblock %}

{% block body %}
    <h1>{{ 'Add mission sensor'|trans }}</h1>

    {% set options = {
        searchUrl: path('mission_sensor_search', {mission: mission.id}),
        addSensorUrl: path('mission_sensor_new', {mission: mission.id, sensor: '%sensor%'})|replace({('%'|url_encode):'%'}),
        editSensorUrl: path('mission_sensor_edit', {mission: mission.id, id: '%sensor%'})|replace({('%'|url_encode):'%'}),
        } %}
    <div id="app" data-options="{{ options|json_encode }}">
        {{ 'Loading app â€¦'|trans }}
    </div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('mission_sensor/add') }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('mission_sensor/add') }}
{% endblock %}
